<script type="text/javascript">
    var LANG = $.session.get("lang");

    function init() {
        setLanguage();
        setTutorialImg();
        comm.setI18nMessage(LANG);
        comm.applyI18n("#contents");
    }
    function setLanguage() {
        if (!LANG) {
            var browserLang = $.cookie('browser_lang');
            if (browserLang) {
                $.session.set("lang", browserLang);
                LANG = browserLang;
            } else {
                $.session.set("lang", "en");
                LANG = "en";
            }
        }
    }
    $('.drop-language li a').on('click', function () {
        var lang = $(this).attr("value");
        $.session.set("lang", lang);
        LANG = lang;
        setTutorialImg();
        comm.setI18nMessage(lang);
        comm.applyI18n("#contents");
        getLevelWords();
        $('.navbar-toggle').click();
    });

    function setTutorialImg(){
        $("#img-tutorial-01").attr("src", "/img/tutorial-01-"+LANG+".png");
        $("#img-tutorial-02").attr("src", "/img/tutorial-02-"+LANG+".png");
        $("#img-tutorial-03").attr("src", "/img/tutorial-03-"+LANG+".png");
    }

    init();

</script>

